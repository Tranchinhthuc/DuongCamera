<div class="new">
  <div class="container">
    <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
      <h3 class="title">New <span>Arrivals</span></h3>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit curabitur </p>
    </div>

    <div class="new-info">
      <% @new_arrivals.each_with_index do |product, index| %>

        <% class_name = class_new_arrivals index%>

        <% wow_delay = 0.5 + (index)*0.2 %>
        <div class="<%= class_name %>" data-wow-delay=<%= wow_delay %> >
          <div class="new-top">
            <a href="single.html"><%= image_tag product.snap.new_arrivals.url, class:"img-responsive", alt:"" %></a>
            <div class="new-text">
              <ul>
                <li><a class="item_add" href=""> Add to cart</a></li>
                <li><a href="single.html">Quick View </a></li>
                <li><a href="products.html">Show Details </a></li>
              </ul>
            </div>
          </div>
          <div class="new-bottom">
            <h5><a class="name" href="single.html"><%= product.title.first(10) %> </a></h5>
            <div class="rating">
              <span class="on">☆</span>
              <span class="on">☆</span>
              <span class="on">☆</span>
              <span class="on">☆</span>
              <span>☆</span>
            </div>
            <div class="ofr">
              <p class="pric1"><del><%= (product.price + (product.price)*0.2).round(2) %></del></p>
              <p><span class="item_price"><%= product.price %></span></p>
            </div>
          </div>
        </div>
      <% end %>
      <div class="clearfix"> </div>
    </div>
  </div>
</div>
