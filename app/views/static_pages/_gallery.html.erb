<!--gallery-->
<div class="gallery">
  <div class="container">
    <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
      <h3 class="title">Popular<span> Products</span></h3>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit curabitur </p>
    </div>
    <div class="gallery-info">
      <% @populer_product.each_slice(4) do |group| %>
        <% group.each_with_index do |product, index| %>
          <% wow_delay = 0.5 + (index)*0.2 %>
          <div class="<%= class_popular_product index %>" data-wow-delay=<%= wow_delay %>>
            <a href="products.html"><%=image_tag product.snap.item_index.url, class:"img-responsive", alt:"đồ chơi mua nhiều" %></a>
            <div class="gallery-text simpleCart_shelfItem">
              <h5><%= link_to product.title, product_path(product), class: "name title_product" %></h5>
              <p><span class="item_price"><%= product.price %></span></p>
              <h4 class="sizes">
                Sizes: <% product.size.split(" ").each_with_index do |size, index| %>
                  <a href=""><%= size %></a> <%= " - " if index != (product.size.split(" ").size-1) %>
                <% end %>
              </h4>
              <ul>
                <li><a href="#"><i class="fa fa-globe" aria-hidden="true"></i></a></li>
                <li><a class="item_add" href="#"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a></li>
                <li><a href="#"><i class="fa fa-heart" aria-hidden="true"></i></a></li>
              </ul>
            </div>
          </div>
        <% end %>
      <% end %>

      <div class="clearfix"></div>


    </div>
  </div>
</div>
<!--//gallery-->
